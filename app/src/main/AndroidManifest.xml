<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.hitsz" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.AircraftWar2023" >

        <activity android:name=".activity.LogInActivity"/>
        <activity android:name=".activity.LauncherActivity"/>
        <activity android:name=".activity.OffLineActivity"/>
        <activity android:name=".activity.RegisterActivity"/>
        <activity android:name=".activity.RankingActivity"/>
        <activity android:name=".activity.OnlineActivity"/>
        <activity android:name=".activity.OverActivity"/>

        <activity
            android:name="edu.hitsz.activity.GameActivity"
            android:exported="false" />

        <activity
            android:name="edu.hitsz.activity.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>

